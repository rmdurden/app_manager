<header>
  <div style="text-align:right">
    <%= link_to "Home", root_path %>
    <% if signed_in? %>
      <%= link_to "Sign out", signout_path, method: "delete" %>
    <% else %>
      <%= link_to "Sign in", signin_path %>
    <% end %>
  </div>
<br>
<% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
</header>
